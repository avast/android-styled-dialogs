<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="DefaultDarkTheme" parent="android:Theme.Holo">
		<item name="sdlDialogStyle">@style/DialogStyleDark</item>
	</style>

	<style name="DefaultLightTheme" parent="android:Theme.Holo.Light">
		<item name="sdlDialogStyle">@style/DialogStyleLight</item>
	</style>

	<style name="CustomDarkTheme" parent="android:Theme.Holo">
		<item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
		<item name="android:windowBackground">@color/background_dark</item>
	</style>

	<style name="CustomLightTheme" parent="android:Theme.Holo.Light">
		<item name="sdlDialogStyle">@style/DialogStyleLight.Custom</item>
		<item name="android:windowBackground">@color/background</item>
	</style>

</resources>